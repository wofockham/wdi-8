<form action="/planets" method="post">
  <label for="name">Name: </label>
  <input id="name" name="planet[name]" autofocus>

  <label for="image">Image: </label>
  <input type="url" id="image" name="planet[image]">

  <label for="orbit">Orbit: </label>
  <input type="number" id="orbit" name="planet[orbit]">

  <label for="mass">Mass: </label>
  <input type="number" id="mass" name="planet[mass]">

  <label for="diameter">Diameter: </label>
  <input type="number" id="diameter" name="planet[diameter]">

  <label for="distance">Distance: </label>
  <input type="number" id="distance" name="planet[distance]">

  <label for="moons">Moons: </label>
  <input type="number" id="moons" name="planet[moons]">

  <button>planet me!</button>
</form>
